{
	"$help": "https://aka.ms/terminal-documentation",
	"$schema": "https://aka.ms/terminal-profiles-schema",
	"actions": [
		{
			"command": { "action": "copy", "singleLine": false },
			"keys": "ctrl+c"
		},

		{
			"command": "paste",
			"keys": "ctrl+v"
		},

		{
			"command": "find",
			"keys": "ctrl+shift+f"
		},

		{
			"command": { "action": "moveFocus", "direction": "nextInOrder" },
			"keys": "alt+j"
		},

		{
			"command": { "action": "moveFocus", "direction": "previousInOrder" },
			"keys": "alt+k"
		},

		{
			"command": {
				"action": "splitPane",
				"split": "auto",
				"splitMode": "duplicate",
				"startingDirectory": "cd"
			},
			"keys": "alt+shift+d"
		}
	],
	"copyFormatting": "none",
	"copyOnSelect": false,
	"defaultProfile": "{0caa0dad-35be-5f56-a8ff-afceeeaa6101}",
	"profiles": {
		"defaults": {
			// https://twitter.com/gomalio_y/status/938769975778488320
			"backgroundImage": "C:/astolfo/67565552@2.png",
			"backgroundImageOpacity": 0.40625,
			"colorScheme": "umu",

			"font": {
				// https://www.nerdfonts.com/font-downloads
				"face": "JetBrainsMono NF",

				// Disables ligatures
				"features": {
					"calt": 0,
					"clig": 0,
					"dlig": 0,
					"hist": 0,
					"hlig": 0,
					"liga": 0,
					"ordn": 0,
					"rlig": 0
				},
				"size": 11
			},

			"startingDirectory": "%USERPROFILE%/code/"
		},
		"list": [
			{
				"guid": "{0caa0dad-35be-5f56-a8ff-afceeeaa6101}",
				"name": "Command Prompt"
			},

			{
