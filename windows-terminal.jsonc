				"source": "Windows.Terminal.VisualStudio"
			},

			{
				"guid": "{0bf2383f-889e-5a58-9a9f-deb06ab444d8}",
				"name": "Developer PowerShell for VS 2022",
				"source": "Windows.Terminal.VisualStudio"
			},

			{
				"guid": "{2ece5bfe-50ed-5f3a-ab87-5cd4baafed2b}",
				"name": "Git Bash",
				"source": "Git"
			}
		]
	},

	"schemes": [
		{
			"background": "#000000",
			"black": "#1A2123",
			"blue": "#1414C5",
			"brightBlack": "#6F7367",
			"brightBlue": "#3E3EFF",
			"brightCyan": "#3EFFFF",
			"brightGreen": "#3EFF3E",
			"brightPurple": "#AA7CA4",
			"brightRed": "#FF513E",
			"brightWhite": "#F2F2F2",
			"brightYellow": "#FFFECA",
			"cursorColor": "#DFCE80",
			"cyan": "#14C5C5",
			"foreground": "#FBEBAD",
			"green": "#14C514",
			"name": "umu",
			"purple": "#C212C2",
			"red": "#C12028",
			"selectionBackground": "#DFCE80",
			"white": "#CCCCCC",
			"yellow": "#DFCE81"
		}
	],

	"tabWidthMode": "equal",
	"theme": "dark"
